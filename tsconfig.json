{
	"include": [
		"./src/*"
	],
	"exclude": [
		"./dist",
		"./node_modules",
	],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./src",

		"allowJs": false,
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6"
	}
}
